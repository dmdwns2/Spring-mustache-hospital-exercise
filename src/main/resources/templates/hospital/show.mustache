{{>layouts/header}}
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">UserName</th>
    </tr>
    </thead>
    <tbody>
    {{#reviews}}
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
            <td>{{userName}}</td>
        </tr>
    {{/reviews}}
    </tbody>
</table>
<a class="btn btn-primary" href="/articles/{{id}}/edit">Modify</a>
<a class="btn btn-danger" href="/articles/{{id}}/delete">Delete</a>
{{>layouts/footer}}